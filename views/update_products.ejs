<!DOCTYPE html>

    <script language="javascript">
      function validate() {
         let item = document.getElementById("productNumber").value;
         if (item == '') {
           alert("상품번호 입력은 필수입니다.");
           return false;
         }
         return true;
      }

      $(document).ready(function() {
        bsCustomFileInput.init();
      })
    </script>

    <p>
    <div class="container">  <!-- container class 가 페이지의 컨텐츠영역을 지정 -->
    <div class="jumbotron" style="width:800px; margin:auto">

    <div class="bm-login-form" style='width:700px; margin-left:auto; margin-right:auto; border:1px'>

      <div class="starter-template">
        <h4> 상품수정</h4> <hr>
      </div>

         <form name=update onsubmit="return validate()" method=post action="update_product" enctype="multipart/form-data">
           <% prodata.forEach(function (item, index) { %>
              <div class="form-group">
               <label for="exampleFormControlSelect1">상품분류</label>
                <select class="form-control" id="exampleFormControlSelect1" name=category value="<%= item.category %>">
                  <option>선풍기</option>
                  <option>에어컨</option>
                  <option>냉풍기</option>
                  <option>미니선풍기</option>
                  <option>냉장고</option>
                  <option>얼풍기</option>
                </select>
             </div>
             <div class="form-group">
               <label for="exampleInputEmail1">상품번호</label>
               <input type="text" class="form-control" name="itemid" id="u_itemid" value="<%= item.itemid %>" readonly aria-describedby="emailHelp" placeholder="예) P0009">
               필수항목, 최대6자리, 중복금지, 예) P0009
             </div>
          <div class="form-row">
            <div class="form-group col-md-6">
             <div class="form-group">
               <label for="exampleInputPassword1">상품명</label>
               <input type="text" class="form-control" name="pname" id="u_pname" value="<%= item.pname %>" placeholder="최대20자까지 입력">
             </div>
             <div class="form-group">
               <label for="exampleInputPassword2">모델명</label>
               <input type="text" class="form-control" name="modelnum" id="u_modelnum" value="<%= item.modelnum %>" placeholder="최대20자까지 입력">
             </div>
             <div class="form-group">
               <label for="exampleInputEmail1">판매형태</label>
               <input type="text" class="form-control" name="event" id="u_event" value="<%= item.event %>" placeholder="일반세일, 이벤트세일, 특별세일">
             </div>
             <div class="form-group">
               <label for="exampleInputEmail1">판매가격(원)</label>
               <input type="text" class="form-control" name="price" id="u_price" value="<%= item.price %>" placeholder="가격을 입력하세요">
             </div>
           </div>
           <div class="form-goup col-md-6">
             <div class="form-group">
               <label for="exampleInputEmail1">제조사</label>
               <input type="text" class="form-control" name="maker" id="u_maker" value="<%= item.maker %>" placeholder="제조회사를 입력하세요">
             </div>
             <div class="form-group">
               <label for="exampleInputEmail1">수량</label>
               <input type="text" class="form-control" name="amount" id="u_amount" value="<%= item.amount %>" placeholder="수량을 입력하세요">
             </div>
             <div class="form-group">
               <label for="exampleInputEmail1">할인율(%)</label>
               <input type="text" class="form-control" name="dcrate" id="u_dcrate" value="<%= item.dcrate %>" placeholder="예) 10%의 경우에는 10 으로 입력하세요">
             </div>
            <label for="exampleInputEmail1">상품이미지 (적정사이즈:250x180)</label>
            <div class="form-group">
               <input type="file" class="custom-file-input2" id="u_entry" value="<%= item.pic %>" width=10px aria-describedby="entry2" accept="image/*" name="photo">
            </div>
           </div>
         </div>
               <hr>
               <div class="row">
                 <div class="col-6">
                   <button type="submit" class="btn btn-outline-primary btn-block">수정완료</button>
                 </div>
                 <div class="col-6">
                   <a class="btn btn-outline-secondary btn-block" role="button" href="/adminprod/list">돌아가기</a>
                 </div>
               </div>
        </form>
        <form action="delete_product" method="post">
            <div>
              <input type="hidden" name="itemid" value="<%=item.itemid%>" />
              <button type="submit" class="btn btn-outline-primary btn-block mt-2">상품삭제</button>
            </div>
        </form>
        <% }); %>
     </div>
     </div>
    </div><!-- /.container -->

 <!-- Footer 영역 -->
